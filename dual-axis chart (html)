  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script src="https://code.highcharts.com/highcharts.js"></script>
  <script src="https://code.highcharts.com/modules/exporting.js"></script>
  <script src="https://code.highcharts.com/modules/no-data-to-display.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      flatpickr("#start-date", { dateFormat: "Y-m-d" });
      flatpickr("#end-date", { dateFormat: "Y-m-d" });

      const favoriteToggle = document.querySelector('.favorite-toggle');
      favoriteToggle.addEventListener('click', function () {
        this.classList.toggle('active');
      });

      const chartContainer = document.querySelector('.chart-container');
      const fullscreenButton = document.querySelector('#fullscreen-toggle');
      fullscreenButton.addEventListener('click', function () {
        chartContainer.classList.toggle('fullscreen');
        chart.reflow();
      });

      const chart = Highcharts.chart('chart-container', {
        chart: {
          type: 'spline',
          backgroundColor: '#f8f8f8',
          height: 420,
          marginTop: 50,
          spacingTop: 30,
          spacingLeft: -35,
          spacingRight: -80,
          spacingBottom: 20
        },
      title: { text: null },
        exporting: { enabled: false },
        credits: { enabled: false },
        tooltip: {
  shared: true,
  useHTML: true,
  formatter: function () {
    let tooltipContent = `<b>${this.points[0].key}</b>`; // X축의 날짜 표시
    this.points.forEach(point => {
      tooltipContent += `<br/><span style="color:${point.series.color}">●</span> ` +
                        `${point.series.name}: <b>${Highcharts.numberFormat(point.y, 2)}</b>`; 
    });
    return tooltipContent;
  }
},
        xAxis: {
          categories: ['2024/03', '2024/04', '2024/05', '2024/06', '2024/07', '2024/08', '2024/09', '2024/10', '2024/11', '2024/12', '2025/01', '2025/02', '2025/03'],
          tickPosition: 'inside',
          tickLength: 5,
          lineColor: '#B8B8B8',
          lineWidth: 1,
          tickColor: '#B8B8B8',
          tickWidth: 1,
          gridLineWidth: 0,
          tickmarkPlacement: 'on',
          labels: { y: 13 },
          startOnTick: false,
          endOnTick: false       
        },
        yAxis: [{
        offset: 0,
        tickPosition: 'inside',
        tickLength: 5,
        lineColor: '#B8B8B8',
        lineWidth: 1,
        tickColor: '#B8B8B8',
        tickWidth: 1,
        gridLineWidth: 0,
        title: {
          text: '(달러/톤)',
          align: 'high',
          rotation: 0,
          y: -7,
          x: 75,
          style: {
            fontSize: '11px',
            fontWeight: 'normal',
            color: '#333'
          }
        },
        labels: { x: -5 }
      }, {
        opposite: true,
        offset: 0,
        tickPosition: 'inside',
        tickLength: 5,
        lineColor: '#B8B8B8',
        lineWidth: 1,
        tickColor: '#B8B8B8',
        tickWidth: 1,
        gridLineWidth: 0,
        title: {
          text: '(달러/트로이온스)',
          align: 'high',
          rotation: 0,
          y: -7,
          x: -115,
          style: {
            fontSize: '11px',
            fontWeight: 'normal',
            color: '#333'
          }
        },
        labels: {
          x: 5,
          style: {
            fontSize: '11px',
            color: '#333'
          }
        }
      }],
        legend: {
          align: 'center',
          verticalAlign: 'bottom',
          layout: 'horizontal',
          itemMarginBottom: 5,
          x: -30,
          y: 30
        },
        plotOptions: {
          series: {
            states: {
              inactive: { opacity: 0.2 },
              hover: { lineWidthPlus: 2 }
            },
            marker: {
              enabled: true,
              states: {
                hover: { enabled: true, radius: 6 }
              }
            },
            events: {
              mouseOver: function () {
                const chart = this.chart;
                chart.series.forEach(series => {
                  if (series !== this) {
                    series.group.attr({ opacity: 0.2 });
                    if (series.markerGroup) {
                      series.markerGroup.attr({ opacity: 0.2 });
                    }
                  } else {
                    series.group.attr({ opacity: 1 });
                    if (series.markerGroup) {
                      series.markerGroup.attr({ opacity: 1 });
                    }
                  }
                });
              },
              mouseOut: function () {
                const chart = this.chart;
                chart.series.forEach(series => {
                  series.group.attr({ opacity: 1 });
                  if (series.markerGroup) {
                    series.markerGroup.attr({ opacity: 1 });
                  }
                });
              },
              legendItemClick: function () { return false; }
            }
          }
        },
         series: [
        {
          name: '철광석(좌측)',
          data: [118.44, 119.32, 120.15, 122.71, 123.11, 118.52, 117.83, 120.64, 121.32, 120.92, 123.06, 126.55, 125.67],
          yAxis: 0
        },
        {
          name: '구리(좌측)',
          data: [8592.74, 8710.41, 8791.23, 8912.71, 9050.63, 9011.42, 8943.05, 9022.51, 9111.92, 9232.85, 9392.18, 9473.63, 9602.31],
          yAxis: 0
        },
        {
          name: '금(우측)',
          data: [1983.32, 1992.76, 2010.45, 2022.53, 2044.76, 2051.44, 2063.57, 2070.21, 2083.15, 2101.82, 2120.44, 2144.61, 2152.37],
          yAxis: 1
        }
      ]
      });
    });
